{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": ["**", "!**/.tmp", "!**/assets"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"includes": [
			"**/*.js",
			"**/*.ts",
			"**/*.tsx",
			"**/*.json",
			"!**/.next",
			"!**/dist",
			"!**/node_modules",
			"!**/coverage"
		],
		"indentWidth": 4
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useTemplate": "off",
				"noParameterAssign": "off",
				"noNonNullAssertion": "off"
			},
			"complexity": {
				"useArrowFunction": "off"
			},
			"correctness": {
				"noConstructorReturn": "off",
				"noUnusedVariables": "off"
			},
			"suspicious": {
				"noConfusingVoidType": "off",
				"noEmptyInterface": "off",
				"noArrayIndexKey": "off"
			},
			"a11y": {
				"noSvgWithoutTitle": "off"
			}
		},
		"includes": [
			"**/*.js",
			"**/*.ts",
			"**/*.tsx",
			"**/*.json",
			"!**/.next",
			"!**/dist",
			"!**/node_modules",
			"!**/eslint.config.ts",
			"!**/coverage"
		]
	},
	"assist": {
		"actions": {
			"recommended": false,
			"source": { "organizeImports": "on" }
		},
		"includes": [
			"**/*.js",
			"**/*.ts",
			"**/*.tsx",
			"**/*.json",
			"!**/.next",
			"!**/dist",
			"!**/node_modules",
			"!**/eslint.config.ts",
			"!**/coverage"
		]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	}
}
